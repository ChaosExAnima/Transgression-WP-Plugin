<?xml version="1.0"?>
<ruleset name="Project Rules">
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<rule ref="WordPress">
		<exclude name="Squiz.Commenting.ClassComment" />
		<exclude name="PEAR.Functions.FunctionCallSignature.ContentAfterOpenBracket" />
		<exclude name="PEAR.Functions.FunctionCallSignature.CloseBracketLine" />
		<exclude name="PEAR.Functions.FunctionCallSignature.MultipleArguments" />
		<exclude name="WordPress.Files.FileName" />
		<properties>
			<property name="check_translator_comments" value="false" />
			<property name="text_domain" type="array" value="transgression" />
			<property name="prefixes" type="array">
				<element value="transgression" />
				<element value="woocommerce" />
			</property>
			<property name="minimum_supported_wp_version" value="5.1"/>
			<property name="strict_class_file_names" value="false" />
		</properties>
	</rule>
	<rule ref="PHPCompatibilityWP" />
</ruleset>
